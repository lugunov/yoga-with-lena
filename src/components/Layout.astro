---
const { title } = Astro.props;
---
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="/style.css" rel="stylesheet" />
  </head>
  <body class="font-sans bg-white text-gray-900">
    <header class="bg-white shadow p-4">
      <nav class="flex justify-between max-w-5xl mx-auto">
        <a href="/" class="font-bold text-lg">Yoga with Lena</a>
        <ul class="flex gap-4">
          <li><a href="/services" class="text-indigo-600">Услуги</a></li>
        </ul>
      </nav>
    </header>
    <main class="max-w-5xl mx-auto px-4">{Astro.children}</main>
    <footer class="text-center text-sm text-gray-500 py-6">© 2025 Yoga with Lena</footer>
  </body>
</html>
